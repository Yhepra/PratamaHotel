@using PratamaHotel.Models;

@model List<Room>;

@{
    ViewData["Title"] = "Room";
    Layout = "_AdminLayout";
}


<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="">ROOM</h4>
                <p class="card-description">
                    (Kamar)
                </p>
            </div>
            <div>
                <a class="btn btn-primary btn-rounded ti-plus" href="Room/Create"> Add</a>
            </div>
        </div>
        <div class="table-responsive">
            @if (Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID Room</th>
                            <th>Room Type</th>
                            <th width="20%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.idRoom</td>
                                <td>@item.roomType.name</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.idRoom" class="btn btn-success w-25 p-2 ti-pencil-alt"></a>
                                    <a asp-action="Delete" asp-route-id="@item.idRoom" class="btn btn-danger w-25 p-2 ti-trash"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center">
                    <p>Data kosong / Tidak ada data untuk ditampilkan!</p>
                </div>
            }
        </div>
    </div>
</div>